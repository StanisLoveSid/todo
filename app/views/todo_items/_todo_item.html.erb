<ul class="todo_item_<%= todo_item.id %>" data-update-url="/posts/<%=@post.id%>/todo_items/<%=todo_item.id%>/sort">
 <%= div_for(todo_item) do %>
  <% if todo_item.completed? %>
    <li>
       <table class="highlight">
        <tbody>
          <tr>
          
           <td><strike><%= todo_item.deadline %><i style="padding-left: 10%;"><%= todo_item.content %></i></strike></td>
              
             <td> 

              <%= link_to edit_post_todo_item_path(@post, todo_item.id), remote: true, method: :patch do %>
        <i class="material-icons right">edit</i> 
      <% end %>
             <%= link_to complete_post_todo_item_path(@post, todo_item.id), remote: true, method: :patch do %>
        <i class="material-icons right">done</i> 
      <% end %>
        <%= link_to post_todo_item_path(@post, todo_item.id), method: :delete, remote: true, data: { confirm: "Are you sure?" } do %>
        <i class="material-icons right" style="padding-left: 0%;">delete</i> 
      <% end %>
      </td>
          </tr>
        </tbody>
      </table>
    </li>
    <% else %>
     <li>
       <table class="highlight">
        <tbody>
          <tr>
            <td><%= todo_item.deadline %><i style="padding-left: 10%;"><%= todo_item.content %></i></td>
              
             <td> 
         
              <%= link_to edit_post_todo_item_path(@post, todo_item.id), remote: true, method: :patch do %>
        <i class="material-icons right">edit</i> 
      <% end %>
             <%= link_to complete_post_todo_item_path(@post, todo_item.id), remote: true, method: :patch do %>
        <i class="material-icons right">done</i> 
      <% end %>
        <%= link_to post_todo_item_path(@post, todo_item.id), method: :delete, remote: true, data: { confirm: "Are you sure?" } do %>
        <i class="material-icons right" style="padding-left: 0%;">delete</i> 
      <% end %>
      </td>
          </tr>
        </tbody>
      </table>
    </li>
    <% end %>
  <% end %>
</ul>


