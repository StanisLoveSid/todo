<div id="page_wrapper">
<h2><%= t "devise.sign_up" %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


<div><%= f.label :name %><br />
  <%= f.text_field :name, autofocus: true, style: "width: 40%;" %></div>

  <div><%= f.label(t("devise.email")) %><br />
  <%= f.email_field :email, id: "email", autofocus: true, style: "width: 40%;" %></div>
  <br>
  <div><%= f.label(t("devise.password")) %> <% if @validatable %><i>(<%= @minimum_password_length  %> characters minimum)</i><% end %><br /> 
    <%= f.password_field :password, id: "password", autocomplete: "off", style: "width: 40%;" %></div>

  <div><%= f.label(t("devise.password_confirmation")) %><br>
	  <%= f.password_field :password_confirmation, id: "password_confirmation", autocomplete: "off", style: "width: 40%;" %></div>
  
 
  <br>
  <div><%= f.submit(t("devise.sign_up"), class: "btn") %></div>
<% end %>
  <br>
<%= render "devise/shared/links" %>
</div>
