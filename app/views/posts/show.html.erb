
<div id="post_content">
<div class="thecard", style="width: 1000px; background-color: #99d6ff">
<p id="notice"><%= notice %></p>
<h1 class="title">
	<%= @post.title %>
</h1>

<% @post.tags.any? %>
    <div class="tags">
     <% @post.tags.each do |tag| %>
     
        <%= link_to tag.name, tag_path(tag.name), class: "tag"%>
      
<% end %>
</div>
<div class="views">
<%= "#{@post.impressionist_count} views" %>
</div>

<p class="date">
<%= t "posts.submited" %> <%= time_ago_in_words(@post.created_at) %> <%= t "posts.ago"%> 
  by<% if @post.user.name? %>
<%= @post.user.name %>
<% else %>
 by Incognito
 <% end %>
<p>
<button class="btn waves-effect waves-light" type="submit" name="action"><%= link_to "Send message to the author of task", new_message_path(:user => @post.user.id), {:style=>'color:white;'} %><i class="material-icons right">send</i></button>
</p>
  <% if @post.user == current_user %>
 <button class="btn waves-effect waves-light" type="submit" name="action"><%= link_to(t('posts.edit'), edit_post_path(@post), {:style=>'color:white;'}) %> </button>
 <button class="btn waves-effect waves-light" type="submit" name="action"><%= link_to(t('posts.delete'), post_path(@post),:style=>'color:white;', method: :delete, data: {confirm: 'Are you sure? Ви впевнені? あなたは深刻ですか？'}) %><i class="material-icons right">delete</i> </button>
  </p>
 <% end %>


 <p class="body">
 <%= raw @post.body %>
 </p>



<div id="todo_items" data-update-url="/posts/<%=@post.id%>/todo_items/sort">
</div>

<script>
  $('#todo_items').html("<%=j render @post.todo_items %>");
</script>


  
    <%= render "todo_items/form" %>





<% if @post.link?  %>
<iframe width="560" height="349" src="http://www.youtube.com/embed/<%=@post.uid %>"></iframe>
<% else %>

<% end %>

 <% if @post.image.file? %>
  <%=link_to image_tag(@post.image.url(:small)), @post.image.url(:original), :popup=>['original_image', 'height=700,width=900'] %>
<% else %>
  
<% end %>


<% if @post.video? %>
<%= video_tag @post.video.url(:medium), controls: true, style: "max-width: 100%;" %>
 <% else %>

 <% end %>

 <p class="btn-group pull-right">
  <%= link_to like_post_path(@post), method: :put, class: "btn btn-default btn-sm" do %>
    <span class="glyphicon glyphicon-chevron-up"></span>
    Upvote
    <%= @post.get_upvotes.size %>
  <% end %>
  <%= link_to dislike_post_path(@post), method: :put, class: "btn btn-default btn-sm" do %>
    <span class="glyphicon glyphicon-chevron-down">
    Downvote
    <%= @post.get_downvotes.size %>

<% end %>
</p>
</div>
<h2><%= @post.comments.count %> <%= t "posts.comments"%></h2>
 <div id="comments">
	 
	<script>
  $('#comments').html("<%=j render @post.comments %>");
</script>
   
	 <h3><%= t "posts.add_comment"%> </h3>

</div>
 <%= render "comments/form" %>
   </div>
 </div>