
<%= form_for(@post, remote: true ) do |f| %>
	<div id="post_content">
<div class="thecard", style="width: 1000px; background-color: #99d6ff">
	
  <p>	
  <%= f.label :title %>
  <%= f.text_field :title, id:"title" %>
  </p>
  <p>*Body(min length 30 characters)</p>
  


   <%= f.text_area :body, id:"body", style: "height: 450px; background-color: white", :class => 'ckeditor'%>
    <p>Share YouTube video by adding the link</p>
   <%= f.text_field :link %>
          
 

       

 <div class="form-group">
        <%= f.label :image, style: "color: black;", class: 'col-sm-2 control-label'  %>
        <div class="col-sm-6">
            <%= f.file_field :image, class: "btn" %>
        </div>
    </div>
  <div> <%= f.label :video, style: "color: black;" %> </div>
    <%= f.file_field :video, class: "btn" %>

   <p>Tags (separated by commas): </p>
  <p>
  <%= f.text_field :tag_list %>
  </p>

  <p>
  <%= f.submit(t("posts.create_post"), id: "create_todo", class: "btn" ) %>
  </p>
  
</div>
</div>
<% end %>
