<div id="tag_cloud", style="padding-bottom: 24%; padding-left: 5%;">
<h3 style="padding-left: 4%;">Tags:</h3> 
<div class="thecard", style="width: 300%">
<div class="tags">

  <% tag_cloud Post.tag_counts.sort { |x, y| x.name <=> y.name }, %w[s m l] do |tag, css_class| %>
  <%= link_to tag.name, tag_url( :tag => tag.name ), :class => "tag" %>
<% end %>
 </div>
  </div>
</div>